        <if test="parentId != null">
            parent_id,
        </if>
        <if test="path != null">
            path,
        </if>
        <if test="type != null">
            type,
        </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <if test="id != null">
            #{id},
        </if>
        <if test="createTime != null">
            #{createTime},
        </if>
        <if test="createUserId != null">
            #{createUserId},
